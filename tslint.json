{
  "extends": ["tslint:recommended", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": ["node_modules/**/*", "*.json", "**/*.json"]
  },
  "rules": {
    "semicolon": [true, "never"],
    "quotemark": [true, "single"],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "always",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ],
    "no-console": { "severity": "warning" },
    "interface-name": [true, "never-prefix"],
    "max-file-line-count": { "severity": "warn", "options": [100] }
  }
}
